--Header
SELECT * FROM AP_AGING_PERIODS AAP;

--Header Line
SELECT AAH.PERIOD_NAME, AAH.DESCRIPTION,
aal.PERIOD_SEQUENCE_NUM seq,
aal.DAYS_START,
aal.DAYS_TO,
aal.REPORT_HEADING1,
aal.REPORT_HEADING2,
 AAL.*, AAH.*
  FROM AP_AGING_PERIODS AAH, AP_AGING_PERIOD_LINES AAL
 WHERE 1 = 1
   AND AAH.AGING_PERIOD_ID = AAL.AGING_PERIOD_ID
   AND AAH.PERIOD_NAME = 'PSA Aging Period';
